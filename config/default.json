{
  "server": {
    "port": 3000,
    "ip": "127.0.0.1",
    "domain": "localhost:3000",
    "use_TLS": false,
    "use_proxy": false
  },
  "express_rate_limit": {
    "window_in_milliseconds": 30000,
    "max_query_number_per_ip_per_window": 100
  },
  "resource": {
    "datasource": {
      "nedb_database_file_dir": "E:\\code\\javascript\\KanColleREST\\data\\WhoCallsTheFleet-DB\\db",
      "nedb_file_names": {
        "ship": "ships",
        "ship_name_suffix": "ship_namesuffix",
        "ship_class": "ship_classes",
        "ship_type": "ship_types",
        "main_ship_type": "ship_type_collections",
        "creator": "entities",
        "consumable": "consumables",
        "seasonal_cg": "exillusts",
        "seasonal_cg_type": "exillust_types",
        "main_equipment_type": "item_type_collections",
        "equipment_type": "item_types",
        "equipment": "items",
        "ship_series": "ship_series"
      }
    },
    "image": {
      "wctf_image_dir": "E:\\code\\javascript\\KanColleREST\\data\\image\\WhoCallsTheFleet-Pics\\dist",
      "mian_image_dir": "E:\\code\\javascript\\KanColleREST\\data\\image\\mian_pics"
    }
  },
  "log": {
    "log_directory": "E:\\code\\javascript\\KanColleREST\\data\\log"
  },
  "api": {
    "current_version": "v1",
    "v1": {
      "root": {
        "route": ""
      },
      "ship": {
        "ship_info": {
          "route": "info",
          "param": {
            "ship": "ship",
            "match_format": "matchfmt",
            "match_format_values": [
              "ja_kana",
              "ja_jp",
              "en_us",
              "zh_cn"
            ],
            "response_format": "resfmt",
            "response_format_values": [
              "json",
              "img"
            ]
          },
          "message_code": [
            {
              "code": 600,
              "message": "Response only contains one ship girl's data."
            },
            {
              "code": 601,
              "message": "You sent a fuzzy matching condition, so response contains more than one ship girl's data."
            }
          ]
        },
        "ship_cg": {
          "route": "cg",
          "param": {
            "ship_id": "shipid",
            "cg_id": "cgid"
          }
        }
      }
    }
  }
}